---
const { img, title } = Astro.props;
---

<section>
  <div class="left-block" style=`background-image: url(${img});`>
    <h2>{title}</h2>
  </div>
  <div class="right-block">
    <slot />
  </div>
</section>

<style>
  section {
    display: flex;
    background-color: white;
  }
  .left-block {
    border-radius: 0 20px 20px 0;
    flex-grow: 1;
    flex-basis: 50%;
    min-height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
  }
  h2 {
    color: white;
  }
  .right-block {
    padding: 1rem;
    flex-grow: 1;
    flex-basis: 50%;
    min-height: 200px;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }
  .facktcards {
    background-color: aquamarine;
    border-radius: 30px;
    text-align: center;
    line-height: 2em;
    padding: 0 1em;
    font-size: 12px;
  }
  .top-img {
    width: 400px;
  }
  @media (max-width: 1240px) {
    section {
      flex-direction: column;
    }
    .left-block {
      border-radius: 0;
    }
  }
  @media (max-width: 767.98px) {
    .right-block {
      flex-direction: column;
    }
  }
</style>
